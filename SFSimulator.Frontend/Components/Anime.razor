@if (ShouldShow)
{
    <Animation Effect="Effect.BounceOutRight" Speed="TimeSpan.FromMilliseconds(500)" OnAnimationEnd="OnAnimationEnd" Enabled="StartAnimation">
        @ChildContent
    </Animation>
}
else if (StartAnimation)
{
    <Animation class="p-abso" Effect="Effect.BounceInLeft" Delay="TimeSpan.FromMilliseconds(50)" Speed="TimeSpan.FromMilliseconds(500)" OnAnimationEnd="OnAnimationEnd" Enabled="StartAnimation">
        @ChildContent
    </Animation>
}
