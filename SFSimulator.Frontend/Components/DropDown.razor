@typeparam TValue where TValue : notnull, Enum

<RadzenFormField Component="@Name" Text="@Label" Variant="Variant.Text">
    <Start>
    @if (Icon != null)
    {
        <SfIcon Icon="@Icon"/>
    }
    </Start>
    <ChildContent>
        <RadzenDropDown Disabled="@Disabled" Data="@(DropDownFactory.ToDropDown<TValue>())" TValue="@TValue" 
            TextProperty="Text" ValueProperty="Value" Name="@Name" @bind-Value:get="@Value" @bind-Value:set="ValueChanged">
        </RadzenDropDown>
    </ChildContent>
</RadzenFormField>

@code 
{
    [Parameter]
    public required TValue? Value { get; set; }
    [Parameter]
    public EventCallback<TValue> ValueChanged { get; set; }
    [Parameter]
    public string? Label { get; set; }
    [Parameter, EditorRequired]
    public required string Name { get; set; }
    [Parameter]
    public string Icon { get; set; } = default!;
    [Parameter]
    public bool Disabled { get; set; }
}
